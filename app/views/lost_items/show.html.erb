<h2>Lost Item</h2>

<p><%= @lost_item.name %></p>
<p>Description: <%= @lost_item.description %></p>
<p><img src=<%=@lost_item.image %> class= "thumbnail"></p>
<p>Who lost it? <%=@lost_item.user %></p>


<div class="controls">
  <%= link_to "Edit work", edit_lost_item_path( @lost_item ) %>
  <%= link_to "Delete work", @lost_item, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
</div>
