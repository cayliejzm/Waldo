<h2>Edit <%= @lost_item.name %></h2>

<%= form_for @lost_item, :url => '/lost_item/#{@lost_item.id}' do |f| %>

<p>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>
</p>
<p>
  <%= f.label :description %>
  <%= f.text_field :description, :required => true %>
</p>
<p>
  <%= f.label :time_date_lost %>
  <%= f.text_field :time_date_lost, :required => true %>
</p>
<p>
  <%= f.label :image %>
  <%= f.url_field :image, :required => true %>
  <!-- above will eventually become cloudinary -->
</p>

<%= f.submit %>

<% end %>
