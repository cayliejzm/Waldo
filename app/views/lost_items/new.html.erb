<h2>Create New Lost Item</h2>

<%= form_for @lost_item, :html => { :multipart => true} do |f| %>

<p>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>
</p>
<p>
  <%= f.label :description %>
  <%= f.text_field :description, :required => true %>
</p>
<p>
  <%= f.label :image %>
  <%= f.text_field :image, :required => true %>
</p>

<p>
  <%= f.label :address %>
  <%= f.text_field :address, :required => true %>
</p>



<%= f.submit "Lodge Lost Item" %>
<% end %>
