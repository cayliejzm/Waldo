<div class="SmallHeading"> Edit Item </div>

<%= form_for @found_item do |f| %>

<p>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>
</p>

<p>
  <%= f.label :description %>
  <%= f.text_field :description, :required => true %>
</p>

<p>
  <%= f.label :image %>
  <%= f.url_field :image, :required => true %>
</p>

<%= f.submit %>

<% end %>
