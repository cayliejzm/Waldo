<h1> Login Page </h1>

<% if session[:user_id] %>
<p><%= session[:user_id] %></p>
<% end %>

<% if flash[:found_user] %>
  <p><%= flash[:found_user] %></p>
<% end %>

<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>

<%= form_tag login_path do %>
<p>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
</p>

<p>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
</p>
<p>
<%= submit_tag "Login" %>
</p>
<% end %>
